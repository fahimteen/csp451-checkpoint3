{
  "name": "checkpoint3-ci-cd",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "jest --coverage",
    "build": "node -e \"require('fs').mkdirSync('dist',{recursive:true});require('fs').writeFileSync('dist/index.html','<h1>CI/CD Demo</h1>')\""
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "eslint": "^9.11.0",
    "@eslint/js": "^9.11.0",
    "globals": "^15.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0"
  }
}
